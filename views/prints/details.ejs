<%- include('../partials/header') %>

<section id="show-page">
  <section id="show-page">
  <div>Title: 
    <%= print.title %></div>
  <div>Start Date: 
    <%= print.startDate.toLocaleString('en-US', { timeZone: 'UTC' }) %></div>
  <div>End Date: 
    <%= print.endDate.toLocaleString('en-US', { timeZone: 'UTC' }) %></div>
  <div>Comments: 
    <%= print.comments %></div>
</section>

<br><br><h2>Reviews</h2>
<% if (user) { %>
<form id="add-review-form" method="POST"
  action="/prints/<%= print._id %>/review">
  <textarea name="content"></textarea>
  <input type="submit" value="Add Review">
</form>
<% } %>

<% if (print.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Review</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% print.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.content %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>
